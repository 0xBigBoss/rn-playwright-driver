{
  "name": "@0xbigboss/rn-playwright-driver",
  "version": "0.1.0",
  "description": "Playwright-compatible E2E test driver for React Native",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./harness": {
      "types": "./harness/index.ts",
      "import": "./harness/index.ts",
      "require": "./harness/index.ts"
    },
    "./harness/dev": {
      "types": "./harness/dev.ts",
      "import": "./harness/dev.ts",
      "require": "./harness/dev.ts"
    },
    "./test": {
      "types": "./dist/test.d.ts",
      "import": "./dist/test.mjs",
      "require": "./dist/test.js"
    }
  },
  "files": [
    "dist",
    "harness",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsgo --noEmit",
    "knip": "knip",
    "cpd": "jscpd .",
    "check": "bun run typecheck && bun run knip && bun run cpd && bun run lint"
  },
  "keywords": [
    "react-native",
    "playwright",
    "e2e",
    "testing",
    "cdp",
    "automation"
  ],
  "author": "0xbigboss",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xbigboss/rn-playwright-driver",
    "directory": "packages/driver"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.40.0"
  },
  "dependencies": {
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "@types/ws": "^8.18.1",
    "@typescript/native-preview": "^7.0.0-dev.20251227.1",
    "jscpd": "^4.0.5",
    "knip": "^5.78.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
